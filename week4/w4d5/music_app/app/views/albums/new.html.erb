<h1>New <%= @band.name %> Album!</h1>

<form action="<%= albums_url %>" method="post">
  <%= authenticate %>

  <label for="title">Title: </label>
  <input id="title" type="text" name="album[title]" value="">
  <br>

  <label for="band">Band: </label>
  <select id="band" name="album[band_id]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= "selected" if band == @band %> >
        <%= band.name %></option>
    <% end %>
  </select>
  <br>

  <label for="live">Live</label>
  <input id="live" type="radio"
                   name="album[studio]"
                   value="false">
  <label for="studio">Studio</label>
  <input id="studio" type="radio"
                     name="album[studio]"
                     value="true"
                     checked>
  <br>

  <label for="year">Year: </label>
  <input type="year" name="album[year]" value="">
  <br>

  <input type="submit" value="Create Album!">

</form>
