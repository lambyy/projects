<h1>New Cat Rental Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_id">Select a cat: </label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>-- Please select a cat --</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Pick a start date: </label>
  <input type="date" name="cat_rental_request[start_date]">
  <br>

  <label for="end_date">Pick an end date: </label>
  <input type="date" name="cat_rental_request[end_date]">
  <br>

  <input type="submit" value="Submit Request">
  
</form>
